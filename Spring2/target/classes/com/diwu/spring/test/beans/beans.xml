<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	default-init-method="init" default-destroy-method="destroy"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">


	<bean id="person" class="com.diwu.spring.test.Person"
		scope="prototype" init-method="onCreate" destroy-method="onDestroy"
		factory-bean="personfactory" factory-method="createPerson">
		<constructor-arg value="777" name="id" type="int"></constructor-arg>
		<constructor-arg value="Mary" name="name" type="String"></constructor-arg>
		<property name="taxId" value="11111"></property>
		
		<property name="address" ref="address"></property>
	</bean>
	<bean id="address" class="com.diwu.spring.test.Address">
		<constructor-arg name="street" value="Jessie st"
			type="String">
		</constructor-arg>
		<constructor-arg name="postcode" value="2145" type="String"></constructor-arg>
	</bean>
	
	<bean id="address2" class="com.diwu.spring.test.Address" p:street="p street" p:postcode="2000">

	</bean>
	
	<bean id="personfactory"
		class="com.diwu.spring.test.PersonFactory">
	</bean>
</beans>
